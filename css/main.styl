color1 = #FFFD75
color2 = #FAAACA
color3 = #69F098

* // Calculate box size considering borders and padding
  box-sizing border-box

body
  font-size 1em
  background-color rgba(0, 255, 255, 1) // fallback color for browsers that don't support gradients
  //background linear-gradient(135deg, white 0%, darken(white, 50%) 50%, darken(white, 1) 100%)

  background rgb(125, 126, 125) /* Old browsers */
  background -moz-radial-gradient(center, ellipse cover, rgba(125, 126, 125, 1) 0%, rgba(14, 14, 14, 1) 100%) /* FF3.6-15 */
  background -webkit-radial-gradient(center, ellipse cover, rgba(125, 126, 125, 1) 0%, rgba(14, 14, 14, 1) 100%) /* Chrome10-25,Safari5.1-6 */
  background radial-gradient(ellipse at center, rgba(125, 126, 125, 1) 0%, rgba(14, 14, 14, 1) 100%)

/* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

main
  display flex
  flex-direction column

#board
  display: flex
  flex-wrap: wrap
  padding 2.5em 2em
  flex-direction row
  justify-content space-evenly

#searchBox
  font-size x-large
  flex-grow: 1
  border-radius 20px
  padding-left  1em


header
  display: flex
  justify-content: space-evenly

header > *
  margin .2em

.note
  float left
  display inline-block
  padding 1em
  max-width 300px
  max-height 300px
  margin 0 1em 1em 0
  //background linear-gradient(top, rgba(0, 0, 0, 0.05), rgba(255, 255, 0, .99))
  background-color color1
  box-shadow 5px 5px 10px -2px rgba(100, 100, 100, .9)
  transform skew(-1deg, 1deg)
  transition transform .15s

  //&.ui-draggable-draggingnth-child(n)
  //  box-shadow 5px 5px 15px 0 rgba(0, 0, 0, .3)
  //  transform scale(1.125) !important
  //  z-index 100
  //  cursor move
  //  transition transform .150s
  /
  textarea
    background-color transparent
    border none
    resize none
    font-family "Gloria Hallelujah", cursive
    width 100%
    heigh 100%
    padding .4em
    &focus
      outline none
      //border black
      box-shadow 0 0 5px 1px rgba(0, 0, 0, .2) inset
    &.title
      font-size 1.5em
      line-height 1.2
      color #000000
      height auto
      margin-top 20px
    &.cnt
      min-height 200px

&:nth-child(2n)
background color2
&:nth-child(3n)
background color3
  /* Button style  */
.button
  font bold 1.25em Helvetica, Arial, sans-serif
  color #FFFFFF
  padding 1em 2em
  //background linear-gradient(top, rgba(0, 0, 0, .15), rgba(0, 0, 0, .3))
  background-color #00CC00
  border-radius 20px
  box-shadow 1px 1px 3px rgba(255, 255, 255, .3), inset 0 -1px 2px -1px rgba(255, 255, 255, .5), inset 0 1px 2px 1px rgba(255, 255, 255, .3)
  //text-shadow 0 -1px 0 rgba(0, 0, 0, .3), 0 1px 0 rgba(255, 255, 255, .3)
  text-decoration none
  transition all 1s

  &hover
    background-color #00EE00
  //box-shadow 0 0 0 0 rgba(0, 0, 0, .3),
  //        inset 0 -1px 2px -1px rgba(0, 0, 0, .5),
  //        inset 0 1px 2px 1px rgba(255, 255, 255, .3)

  &active
    background linear-gradient(bottom, rgba(0, 0, 0, .15), rgba(0, 0, 0, .3))
    background-color #00CC00
    text-shadow 0 1px 0 rgba(0, 0, 0, .3), 0 -1px 0 rgba(255, 255, 255, .3)
    box-shadow inset 0 1px 2px rgba(0, 0, 0, .3), inset 0 -1px 2px rgba(255, 255, 255, .3)
    outline none

  &.remove
    position absolute
    top 5px
    right 5px
    width 36px
    height 36px
    border-radius 50%
    background-color #E01C12
    text-align center
    line-height 16px
    padding 10px
    //border-color #B30000
    //font-style 1.6em
    //font-weight bolder
    //font-family Helvetica, Arial, sans-serif

    &hover
      background-color lighten(#E01C12, 20%)

